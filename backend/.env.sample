# Environment configuration
NODE_ENV= # Set to 'development' or 'production'
PORT= Port # number where the server will run (e.g., 5000)

# URLS
SERVER_LOCAL_CLIENT_URL=(e.g.:- http://localhost:5173)
SERVER_PRODUCTION_CLIENT_URL= # your backend deployed site url.

# Database Configuration
DATABASE_NAME= # Name of the database
DATABASE_URI= # Database connection URI (e.g., MongoDB URI)
DATABASE_PASSWORD= # Password for database authentication

# Access Token Configuration
ACCESS_GENERATE_SECRET= # Secret key for generating access tokens (use a strong random string)
ACCESS_TOKEN_EXPIRY= # Expiry time for access tokens (e.g., 15m, 1h, 7d)

# Refresh Token Configuration
REFRESH_GENERATE_SECRET= # Secret key for generating refresh tokens (use a strong random string)
REFRESH_TOKEN_EXPIRY= # Expiry time for refresh tokens (e.g., 7d, 30d)

# Cloudinary Configuration (for media storage)
CLOUDINARY_CLOUD_NAME= # Your Cloudinary cloud name
CLOUDINARY_API_KEY= # Your Cloudinary API key
CLOUDINARY_API_SECRET= # Your Cloudinary API secret

# Email Configuration (for sending emails)
EMAIL_HOST= # SMTP host (e.g., smtp.gmail.com) 
EMAIL_PORT= # SMTP port (587 for TLS, 465 for SSL)
EMAIL_USERNAME= # Your email service username (e.g., abc@gmail.com)
EMAIL_PASSWORD= # Your email service password or app password
